
{% trans_default_domain 'import' %}
{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as m %}
{% block content %}
    {% if not stats %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ m.start_button() }}
            {{ m.submit_button('submit', 'check', 'btn-success', 'form.location.do_import'|trans) }}
            {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
        {{ m.end_button() }}
        {{ form_end(form) }}
    {% else %}
        <h4>{{ 'report.stats'|trans }}</h4>
        <ul>
            <li>{{ 'report.location.updated_locations'|trans }}: {{ stats.updated_count }}</li>
            <li>{{ 'report.location.new_locations'|trans }}: {{ stats.new_count }}</li>
        </ul>
        {% if stats.new_collection %}
            <h4>{{ 'report.location.list'|trans }}</h4>
            <ul>
                {% for location in stats.new_collection %}
                <li>{{ location }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
    {% endif %}
{% endblock %}
