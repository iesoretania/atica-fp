{% trans_default_domain 'wlt_tracking' %}
{% extends 'generic/list.html.twig' %}
{% import 'macros.html.twig' as m %}

{% block new_action %}{% endblock %}

{% block table_header %}
    <th>{{ 'header.student'|trans }}</th>
    <th>{{ 'header.workcenter'|trans }}</th>
    <th>{{ 'header.start_date'|trans }}</th>
    <th>{{ 'header.end_date'|trans }}</th>
    <th>{{ 'header.status'|trans }}</th>
{% endblock %}

{% block table_body %}
            {% for item in pager %}
                {% set url = path('work_linked_training_tracking_calendar_list', {'id': item[0].id}) %}
                <tr class="clickable-row" data-href="{{ url }}">
                    <td>
                        <a href="{{ url }}">{{ item[0].studentEnrollment }}</a>
                    </td>
                    <td>
                        {{ item[0].workcenter }}
                    </td>
                    <td>{{ item[0].startDate ? item[0].startDate|date('format.date'|trans({}, 'general')) }}</td>
                    <td>{{ item[0].endDate ? item[0].endDate|date('format.date'|trans({}, 'general')) }}</td>
                    <td>
                        {% if item[1] %}
                            {{ item[2] }}/{{ 'table.hours'|transchoice(item[1]) }} ({{ (item[2]*100/item[1]) | number_format(2, 'format.decimal_separator'|trans({}, 'general')) }} %)
                            {% if item[3] != 0 %} - {{ 'table.absences'|transchoice(item[3]) }}{% endif %}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{{ 'table.no_items'|trans }}</td>
                </tr>
            {% endfor %}
{% endblock %}

{% block after_table %}
        <div class="clearfix"></div>
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
{% endblock %}
