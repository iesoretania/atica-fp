{% trans_default_domain 'wlt_agreement' %}
{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as m %}
{% block content %}
    {{ form_start(form, {'attr': {'data-ajax': path('work_linked_training_agreement_new')}}) }}
    {{ form_widget(form) }}
    {{ m.start_button() }}
        {{ m.submit_button('submit', 'check', 'btn-success', 'form.save'|trans) }}
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
    {{ m.end_button() }}
    {{ form_end(form) }}

    <input type="hidden" id="new-person-label" value="{{ 'title.new'|trans({}, 'person') }}" />
    {% include 'user/new_person_modal.partial.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/person.js') }}"></script>
    <script src="{{ asset('build/wlt_agreement.js') }}"></script>
{% endblock %}
