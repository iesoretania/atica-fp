{% trans_default_domain 'edu_subject' %}
{% extends 'generic/list.html.twig' %}
{% import 'macros.html.twig' as m %}

{% block new_action %}{% endblock %}

{% block table_header %}
    <th>{{ 'header.name'|trans }}</th>
    <th>{{ 'header.code'|trans }}</th>
    <th>{{ 'header.grade'|trans }}</th>
{% endblock %}

{% block table_body %}
            {% for subject in pager %}
                {% set url = path('work_linked_training_training_activity_list', {'id': subject.id}) %}
                <tr class="clickable-row" data-href="{{ url }}">
                    <td>
                        <a href="{{ url }}">{{ subject.name }}</a>{% if subject.workplaceTraining %} <span class="badge badge-success">{{ 'header.workplace_training'|trans }}</span>{% endif %}
                    </td>
                    <td>
                        {{ subject.code }}
                    </td>
                    <td>
                        {{ subject.grade }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'table.no_items'|trans }}</td>
                </tr>
            {% endfor %}
{% endblock %}

{% block after_table %}
        <div class="clearfix"></div>
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
{% endblock %}
