{% trans_default_domain 'edu_subject' %}
{% extends 'generic/list.html.twig' %}
{% import 'macros.html.twig' as m %}

{% block new_action %}{% endblock %}

{% block table_header %}
    <th>{{ 'header.name'|trans }}</th>
    <th>{{ 'header.grade'|trans }}</th>
    <th>{{ 'header.teachers'|trans }}</th>
{% endblock %}

{% block table_body %}
            {% for subject in pager %}
                {% set url = path('training_learning_outcome_list', {'id': subject.id}) %}
                <tr class="clickable-row" data-href="{{ url }}">
                    <td>
                        <a href="{{ url }}">{{ subject.name }}{% if subject.workplaceTraining %} <span class="badge badge-success">{{ 'header.workplace_training'|trans }}</span>{% endif %}</a>
                    </td>
                    <td>
                        {{ subject.grade }}
                    </td>
                    <td>
                        {% for teaching in subject.teachings %}{{ teaching.teacher }} ({{ teaching.group }}){% if teaching.workLinked %} <span class="badge badge-success">{{ 'header.work_linked_training'|trans }}</span>{% endif %}{% if not loop.last %}, {% endif %}{% endfor %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'table.no_items'|trans }}</td>
                </tr>
            {% endfor %}
{% endblock %}

{% block before_table %}
    <div class="btn-group btn-group-toggle" id="filter" data-toggle="buttons">
        <label class="btn btn-secondary active">
            <input type="radio" name="filter" value="0" autocomplete="off" {% if f == 0 %}checked{% endif %}> {{ 'form.filter.all'|trans }}
        </label>
        <label class="btn btn-secondary">
            <input type="radio" name="filter" value="2" autocomplete="off" {% if f == 2 %}checked{% endif %}> {{ 'form.filter.workcenter_training'|trans }}
        </label>
        <label class="btn btn-secondary">
            <input type="radio" name="filter" value="3" autocomplete="off" {% if f == 3 %}checked{% endif %}> {{ 'form.filter.unassigned'|trans }}
        </label>
    </div>
{% endblock %}

{% block after_table %}
        <div class="clearfix"></div>
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
{% endblock %}
