{% trans_default_domain "security" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'security/login_base.html.twig' %}

{% block title 'form.reset.title'|trans %}

{% block login_title %}{{ 'form.reset.title'|trans }}{% endblock %}

{% block login_content %}
    {{ form_start(form) }}
    <div class="form-group">
        <div class="text-right"><a href="{{ path('login') }}" tabindex="3"><i class="fas fa-chevron-left"></i> {{ 'form.reset.back'|trans }}</a></div>
        {{ form_row(form.email) }}
    </div>
    <div class="form-group">
        <button type="submit" name="login" class="btn btn-info btn-block" tabindex="2">{{ 'form.reset.submit'|trans }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
