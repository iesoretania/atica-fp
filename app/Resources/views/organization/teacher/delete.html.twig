{% trans_default_domain 'edu_teacher' %}
{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as m %}
{% block content %}
    <form method="post">
        {% for teacher in teachers %}
            <input type="hidden" name="users[]" value="{{ teacher.id }}">
        {% endfor %}
        <input type="hidden" name="confirm" value="ok">
        <div class="alert alert-warning">{{ 'prompt.delete_confirm'|trans|nl2br }}</div>
        <div id="table" class="col-md-12 table-responsive">
            <table id="list" class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th class="col-sm-4">{{ 'header.name'|trans }}</label></th>
                        <th class="col-sm-4">{{ 'header.username'|trans }}</th>
                        <th class="col-sm-4">{{ 'header.profiles'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for teacher in teachers %}
                        <tr>
                            <td>{{ teacher.person.firstName }} {{ teacher.person.lastName }}</td>
                            <td>{{ teacher.person.user.userNameAndEmailAddress }}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
        {{ m.submit_button('submit', 'trash', 'btn-danger', 'form.delete_confirm'|trans) }}
    </form>
{% endblock %}
