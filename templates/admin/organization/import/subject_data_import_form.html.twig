{% trans_default_domain 'import' %}
{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as m %}
{% block content %}
    {% if not stats %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ m.start_button() }}
            {{ m.submit_button('submit', 'check', 'btn-success', 'form.criteria.do_import'|trans) }}
            {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
        {{ m.end_button() }}
        {{ form_end(form) }}
    {% else %}
        <h4>{{ 'report.stats'|trans }}</h4>
        <ul>
            <li>{{ 'report.criteria.new_subjects'|trans }}: {{ stats.new_subjects }}</li>
            <li>{{ 'report.criteria.updated_subjects'|trans }}: {{ stats.updated_subjects }}</li>
            <li>{{ 'report.criteria.new_learning_outcomes'|trans }}: {{ stats.new_learning_outcomes }}</li>
            <li>{{ 'report.criteria.updated_learning_outcomes'|trans }}: {{ stats.updated_learning_outcomes }}</li>
            <li>{{ 'report.criteria.new_criteria'|trans }}: {{ stats.new_criteria }}</li>
            <li>{{ 'report.criteria.updated_criteria'|trans }}: {{ stats.updated_criteria }}</li>
        </ul>
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
    {% endif %}
{% endblock %}
