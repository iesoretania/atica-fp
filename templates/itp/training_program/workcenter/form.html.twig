{% trans_default_domain 'itp_student_program' %}
{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as m %}
{% form_theme form _self %}
{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ m.start_button() }}
        {{ m.submit_button('submit', 'check', 'btn-success', 'form.save'|trans) }}
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
    {{ m.end_button() }}
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
    {{ encore_entry_script_tags('itp_workcenter') }}
    {{ encore_entry_script_tags('person') }}
    <script>
        $(document).ready(function () {
            $('.select2entity[data-autostart="true"]').select2('destroy');
            $('.select2entity[data-autostart="true"]').select2entity({
                theme: "bootstrap",
                language: {
                    inputTooShort: function () {
                        return "{{ 'input.unique_identifier'|trans({}, 'person') }}";
                    },
                    searching: function () {
                        return "{{ 'input.searching'|trans({}, 'person') }}";
                    }
                }
            });
        });
    </script>
{% endblock %}
