{% trans_default_domain 'itp_company' %}
{% extends 'generic/list.html.twig' %}
{% import 'macros.html.twig' as m %}

{% block path_new %}{{ path('in_company_training_phase_activity_new', {'programGrade': program_grade.id}) }}{% endblock %}

{% block table_header %}
    <th class="w-10">{{ 'header.code'|trans }}</th>
    <th class="w-30">{{ 'header.name'|trans }}</th>
    <th class="w-20">{{ 'header.activities'|trans }}</th>
    <th class="w-20">{{ 'header.learning_outcomes'|trans }}</th>
    <th class="w-20">{{ 'header.criteria'|trans }}</th>
{% endblock %}

{% block table_body %}
            {% for item in pager %}
                {% set url = path('in_company_training_phase_activity_edit', {'id': item.id}) %}
                <tr class="clickable-row" data-href="{{ url }}">
                    <td>
                        <a href="{{ url }}">{{ item.code }}</a>
                    </td>
                    <td>
                        {{ item.name }}
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{{ 'table.no_items'|trans }}</td>
                </tr>
            {% endfor %}
{% endblock %}

{% block after_table %}
    <div class="clearfix"></div>
    {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
{% endblock %}
